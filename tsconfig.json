{
    "compilerOptions": {
        "target": "ES2020",
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "allowJs": false,
        "sourceMap": true,
        "declaration": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "declarationMap": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "noUnusedParameters": true,
        "skipDefaultLibCheck": false,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES2020"],
        "paths": {
            "@api/*": ["./api/*"],
            "@database/*": ["./database/*"],
            "@models/*": ["./models/*"],
            "@security": ["./security/*"],
            "@services/*": ["./services/*"],
            "@utils/*": ["./utils/*"],
            "@constants": ["./constants/constants.ts"]
        },
        "plugins": [
            {
                "name": "typescript-plugin-node",
                "rootDir": "./src"
            }
        ]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
